<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.muni.sci.astro.fhm.gui.MenuBarController" fx:id="menuBar">
    <menus>
        <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem mnemonicParsing="false" text="Save" disable="true" />
                <MenuItem mnemonicParsing="false" text="Exit" onAction="#handleClickMenuItemExit" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Modes">
            <items>
                <MenuItem mnemonicParsing="false" text="Switch to single operation mode" disable="true" />
                <MenuItem mnemonicParsing="false" text="Switch to multiple operation mode" disable="true" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Tools">
            <items>
                <MenuItem mnemonicParsing="false" text="UTC and JD converter" onAction="#handleClickMenuItemUTC_JD_Converter" />
                <MenuItem mnemonicParsing="false" text="Card values single card concatenation manager..." disable="true" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <items>
                <MenuItem mnemonicParsing="false" text="About" onAction="#handleClickMenuItemAbout" />
            </items>
        </Menu>
    </menus>
</MenuBar>
